/* 定义文本的排版 */

.entry-content > .wxParse-p {
  padding: 30rpx 40rpx;
  line-height: 58rpx;
  opacity: 0.6;
  font-size: 34rpx;
}

/* 默认图片排版有间距，需要占满发布文章时增加fullwidth标签 */

.entry-content > .wxParse-figure.wp-block-image {
  position: relative;
  margin: 30rpx 40rpx;
  border-radius: 20rpx;
  overflow: hidden;
  z-index: 10;
}

.entry-content > .wxParse-figure.wp-block-image image {
  display: block;
}

.entry-content > .wxParse-figure.wp-block-image.fullwidth {
  margin: 30rpx 0rpx;
}

.entry-content > .wxParse-figure.wp-block-image .wxParse-figcaption {
  line-height: 40rpx;
  background: rgba(0, 0, 0, 0.05);
  padding: 30rpx 40rpx;
}

.entry-content > .wxParse-figure.wp-block-image .wxParse-figcaption text {
  font-size: 30rpx;
  opacity: 0.4;
}

.entry-content > .wxParse-figure.wp-block-image.fullwidth image {
  width: 100% !important;
}

.entry-content > .wxParse-figure.wp-block-image.fullwidth .wxParse-figcaption {
  display: none;
}

/* 视频默认竖版375:812比例，需要4:3或者1:1文章时增加video4-3/video1-1标签 */

.entry-content > .wxParse-figure.wp-block-video {
  padding: 30rpx 40rpx;
}

.entry-content > .wxParse-figure.wp-block-video video {
  border-radius: 20rpx;
  overflow: hidden;
  width: 100%;
  position: relative;
}

.entry-content > .wxParse-figure.wp-block-video video::after {
  content: "";
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  border-radius: 20rpx;
  z-index: 11;
  border-width:1rpx;
  border-style: solid;
}
