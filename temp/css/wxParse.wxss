/* 定义画集样式 */

.wp-block-gallery {
  margin-bottom: 40rpx!important;
  position: relative;
  width: 100%;
}

.blocks-gallery-grid {
  margin: 70rpx 0 0 0 !important;
  width: 100%;
  white-space: nowrap;
  overflow-x: scroll;
  overflow-y: hidden;
  -webkit-overflow-scrolling: touch;
}

.blocks-gallery-grid > .blocks-gallery-item:first-child {
  margin-left: 40rpx;
}

.blocks-gallery-grid > .blocks-gallery-item:last-child {
  margin-right: 40rpx;
}

.blocks-gallery-grid > .blocks-gallery-item {
  display: inline-block;
  align-items: center;
  justify-content: center;
  position: relative;
  margin-right: 18rpx;
  width: 220rpx;
}

.blocks-gallery-grid > .blocks-gallery-item .wxParse-li-circle {
  display: none;
}

.blocks-gallery-grid > .blocks-gallery-item image {
  width: 220rpx !important;
  border-radius: 10rpx;
  position: relative;
}

.blocks-gallery-grid > .blocks-gallery-item image::after {
  content: "";
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;border-radius: 10rpx;
  z-index: 11;
  border-width:1rpx;
  border-style: solid;
}

.blocks-gallery-grid > .blocks-gallery-item .blocks-gallery-item__caption {
  line-height: 40rpx;
  text-align: center;
}

.blocks-gallery-grid > .blocks-gallery-item .blocks-gallery-item__caption text {
  font-size: 28rpx;
  opacity: 0.4;
  font-style: italic;
}

.blocks-gallery-caption {
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width:100%;
  height:70rpx;
  z-index: 10;
}

.blocks-gallery-caption view.wxParse-inline {
  line-height: 70rpx;
  height: 70rpx;
  display: block;
}

.blocks-gallery-caption text {
  font-weight: bold;
  font-size: 36rpx;
  margin: 0 40rpx;
}

/* 定义default-loop的卡片样式 */

.su-posts-default-loop {
  margin-bottom: 40rpx !important;
  width: 100%;
}

.su-posts-default-loop .su-post {
}

.su-posts-default-loop .su-post .su-post-tap {
  padding: 40rpx;
  display: flex;
  flex-flow: column;
  align-items: center;
}

.su-posts-default-loop .su-post .su-post-tap image {
  position: relative;
  width: 180rpx !important;
  height: 180rpx !important;
  overflow: hidden;
}

.su-posts-default-loop .su-post .su-post-tap image::after {
  content: "";
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 11;
  border-width:1rpx;
  border-style: solid;
}

.su-posts-default-loop .su-post .su-post-tap.iosapp image,.su-posts-default-loop .su-post .su-post-tap.iosapp image::after {
  border-radius: 22.5%;
}

.su-posts-default-loop .su-post .su-post-tap.wxapp image,.su-posts-default-loop .su-post .su-post-tap.wxapp image::after {
  border-radius: 50%;
}

.su-posts-default-loop .su-post .su-post-tap .su-post-title {
  line-height: 58rpx;
  margin-top: 30rpx;
}

.su-posts-default-loop .su-post .su-post-tap .su-post-title text {
  font-weight: 500;
  font-size: 40rpx;
}

.su-posts-default-loop .su-post .su-post-tap .su-post-excerpt {
  line-height: 38rpx;
}

.su-posts-default-loop .su-post .su-post-tap .su-post-excerpt text {
  font-size: 28rpx;
  opacity: 0.4;
}

.su-posts-default-loop .su-post .su-post-tap .su-post-meta {
  line-height: 42rpx;
  margin-top: 50rpx;
  margin-bottom: 20rpx;
}

.su-posts-default-loop .su-post .su-post-tap .su-post-meta text {
  font-size: 30rpx;
  padding: 8rpx 30rpx;
  border-radius: 30rpx;
  position: relative;
}

