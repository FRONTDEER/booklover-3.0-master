@import "/app.wxss";

.content{
  width:75%;
  position: fixed;
  z-index: 10;
  height:100%;
  top:0;
  left:0;
}

.content .setbox {
  position: absolute;
  height:auto;
  top:0rpx;
  right:40rpx;
  left:40rpx;
}

.content .setbox .tit {
  font-size: 34rpx;
  font-weight: 600;
  border-top:1rpx solid rgba(123,123,123,.2);
  margin-top:40rpx;
  padding-top:40rpx;
}
.content .setbox .tit:first-child{
  border-top:none;
  padding-top:0rpx;
}

.setcell {
  margin-top:30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.content .copyright {
  position: absolute;
  height:auto;
  bottom:0rpx;
  left:40rpx;
  right:40rpx;
}

.content .copyright .about {
  font-size:30rpx;
  font-weight: bold;
  padding:30rpx 0;
  width: 100%;
  border-bottom:1rpx solid rgba(123,123,123,.2);
}
.content .copyright .msg {
  font-size:24rpx;
  opacity: .6;
}

.content .copyright .link {

  border-bottom:1rpx solid rgba(123,123,123,.2);
  width: 100%;
  padding:30rpx 0;
  font-size: 26rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  opacity: .6;
}
.content .copyright .link .icon {
  width:40rpx;
  height:40rpx;
  font-size: 1.42em;
  margin-right:20rpx;
}

