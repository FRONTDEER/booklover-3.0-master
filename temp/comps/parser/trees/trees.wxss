/* 在这里引入自定义样式 */
@import "external.wxss";

/* 链接和图片效果 */

._a {
  color: #366092;
  display: inline;
  padding: 1.5px 0 1.5px 0;
  word-break: break-all;
}

._a ._a_tree {
  display: inline;
}

._p ._a ._text {
  color: #366092;
  display: inline;
  padding: 1.5px 0 1.5px 0;
  word-break: break-all;
  text-decoration: underline;
  /* transition: 0.5s;
  transform: scale(1); */
}

._hover {
  /* opacity: 0.7;
  text-decoration: underline; */
  transition: 0.3s;
  transform: scale(0.96);
}

._visited {
  /* color: #551a8b; */
}

._img {
  height: 50px;
  max-width: 100%;
}

/* 内部样式 */

:host {
  display: block;
}

._blockquote,
._div,
._p,
._ul,
._ol,
._li {
  display: block;
}

._b,
._strong {
  font-weight: bold;
}

._code {
  font-family: monospace;
}

._del {
  text-decoration: line-through;
}

._em,
._i {
  font-style: italic;
}

._h1 {
  font-size: 2em;
}

._h2 {
  font-size: 1.5em;
}

._h3 {
  font-size: 1.17em;
}

._h5 {
  font-size: 0.83em;
}

._h6 {
  font-size: 0.67em;
}

._h1,
._h2,
._h3,
._h4,
._h5,
._h6 {
  display: block;
  font-weight: bold;
}

._ins {
  text-decoration: underline;
}

._ul ._liwrap {
  display: flex;
}

._li {
  flex: 1;
  width: 0;
}

._ol-bef {
  margin-right: 5px;
  text-align: right;
  width: 36px;
}

._ul-bef {
  line-height: normal;
  margin: 0 12px;

}

._ol-bef,
._ul-bef {
  flex: none;
  user-select: none;
}

._ul-p1 {
  display: inline-block;
  height: 0.3em;
  line-height: 0.3em;
  overflow: hidden;
  width: 0.3em;
}

._ul-p2 {
  border: 0.05em solid black;
  border-radius: 50%;
  display: inline-block;
  height: 0.23em;
  width: 0.23em;
}

._q::before {
  content: '"';
}

._q::after {
  content: '"';
}

._sub {
  font-size: smaller;
  vertical-align: sub;
}

/* ._sup {
  font-size: smaller;
  vertical-align: super;
} */

.__bdi,
.__bdo,
.__ruby,
.__rt,
._svg {
  display: inline-block;
}

._video {
  background-color: black;
  display: inline-block;
  height: 225px;
  position: relative;
  width: 300px;
}

._video::after {
  border-color: transparent transparent transparent white;
  border-style: solid;
  border-width: 15px 0 15px 30px;
  content: '';
  left: 50%;
  margin: -15px 0 0 -15px;
  position: absolute;
  top: 50%;
}