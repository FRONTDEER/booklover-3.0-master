<view class="header-title {{isActive ? 'active' : ''}} {{pageStyle}}" style="position:fixed;display:block;height:{{customBarHeight}}px;width:100%;">
	<view class="navigate-bar" style="position:relative;top:{{navBarHeight}}px;z-index:2;height:{{titleBarHeight}}px;">
		<view class="gobackbtn btn" style="height:{{titleBarHeight}}px;" wx:if="{{isGoback}}">
			<navigator class="navigate-icon" style="height:{{titleBarHeight}}px;" open-type="navigateBack" wx:if="{{isshare==0}}">
				<icon class="icon iconfont icon-back" />
			</navigator>
			<navigator class="navigate-icon" style="height:{{titleBarHeight}}px;" open-type="switchTab" url="/pages/index/index" wx:else>
				<icon class="icon iconfont icon-home" />
				</navigator>
		</view>
		<view bindtap='taplistarea' class="listbtn btn" style="height:{{titleBarHeight}}px;" wx:if="{{isTolist}}">
			<icon class="icon iconfont icon-hamburger" />
		</view>
		<view bindtap='tapsearcharea' class="searchbtn btn" style="height:{{titleBarHeight}}px;" wx:if="{{isSearch}}">
			<icon class="icon iconfont icon-search" />
		</view>

		<view class="navigate-title color-base-op80" style="height:{{titleBarHeight}}px;">
			<text class="text">{{title}}</text>
			<view class="sk-three-bounce {{loading ? 'load' : ''}}">
				<view class="sk-child sk-bounce1 bgcolor-base-face-op50 "></view>
				<view class="sk-child sk-bounce2 bgcolor-base-face-op50 "></view>
				<view class="sk-child sk-bounce3 bgcolor-base-face-op50 "></view>
			</view>

		</view>
	</view>
	<view class="header-title-bg bgcolor-base-op95" style="position:absolute;background:{{bgcolor}};left:0;top:0;right:0;height:{{customBarHeight}}px; z-index:1;"></view>
</view>