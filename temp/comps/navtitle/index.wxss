.skinbtn .switch {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  overflow: hidden;
  box-sizing: border-box;
  position: relative;
  /* background-color: #ff6600; */
  z-index: 100;
  transition: 0.3s;
}

.skinbtn .switch .switchimg {
  position: absolute;
  z-index: 10;
  transition: all 0.5s;
  transform: rotate(0deg);
  display: flex;

}

.skinbtn .switch .switchimg .image {
  width: 50rpx;
  height: 100rpx;
  display: block;
}

.skinbtn .switch.active {
  /* background-color: #3333cc; */
  transition: 0.3s;
}

.skinbtn .switch.active .switchimg {
  transform: rotate(180deg);
}

.skinbtn .switch::after {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  border-radius: 50%;
}

