.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 96rpx;
  display: flex;
  padding-bottom: calc(env(safe-area-inset-bottom));
  z-index: 100;
}

.tab-bar-border {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1rpx;
  transform: scaleY(0.5);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tab-bar-item .image {
  width: 54rpx;
  height: 54rpx;
}

.tab-bar-item .text {
  font-size: 20rpx;
}

.tab-bar.whitebg {
  background: rgba(255, 255, 255, 0.95);
}

.tab-bar.whitebg .tab-bar-border {
  background-color: rgba(255, 255, 255, 1);
}

.tab-bar.whitebg .tab-bar-item .color {
  color: rgba(0, 0, 0, 0.8);
}

.tab-bar.whitebg .tab-bar-item .selectedColor {
  color: rgba(0, 0, 0, 1);
}

.tab-bar.blackbg {
  background: rgba(20, 20, 20, 0.95);
}

.tab-bar.blackbg .tab-bar-border {
  background-color: rgba(20, 20, 20, 1);
}

.tab-bar.blackbg .tab-bar-item .color {
  color: rgba(255, 255, 255, 0.9);
}

.tab-bar.blackbg .tab-bar-item .selectedColor {
  color: rgba(255, 255, 255, 1);
}
