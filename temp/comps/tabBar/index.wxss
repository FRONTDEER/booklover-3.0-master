@import "/app.wxss";

.hide {
  display: none !important;
}

.tab-bar {
  /* position: fixed;
  bottom: 0;
  left: 0;
  right: 0; */
  
  height: 96rpx;
  display: flex;
  /* display: none; */
  padding-left: 10rpx;
  padding-right: 10rpx;
  padding-bottom: calc(env(safe-area-inset-bottom));
  z-index: 90;
  transition: 0.3s;
}

.cover-view {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  
  height: 96rpx;
  display: flex;
  /* display: none; */
  padding-left: 10rpx;
  padding-right: 10rpx;
  padding-bottom: calc(env(safe-area-inset-bottom));
  z-index: 50;
  background-color: #000000;
}

.tab-bar.scroll {
  transition: 0.3s;
  bottom: -200rpx;
}

.tab-bar-border {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1rpx;
  transform: scaleY(0.5);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tab-bar-item .icon {
  width: 48rpx;
  height: 48rpx;
  font-size: 1.84em;
  opacity: .3;
  margin-top: 6rpx;
}

.tab-bar-item .icon.selected {
  opacity: .8;
}

.tab-bar-item .text {
  font-size: 20rpx;
  font-weight: 500;
}

.tab-bar.simple .tab-bar-item .icon {
  width: 60rpx;
  height: 60rpx;
  font-size: 2.1em;
}

.tab-bar.simple .tab-bar-item .text {
  display: none;
}

.tab-bar-item-add .image,
.tab-bar.simple .tab-bar-item-add .image {
  width: 70rpx;
  height: 70rpx;
}

.addlist {
  padding: 40rpx;
}

.addlist .card-cell {
  padding: 0rpx 40rpx;
  background: rgba(123, 123, 123, .1);
  border-radius: 20rpx;
  margin: 30rpx 0;
}

.addlist .card-cell-msg .card-cell-base .card-cell-title {
  font-size: 36rpx;
  line-height: 48rpx;
}

.addlist .card-cell-msg {
  border-width: 0;

}