<!--miniprogram/custom-tab-bar/index.wxml-->
<view class="tab-bar {{pageStyle}}">
  <view class="tab-bar-border"></view>
  <view wx:for="{{list}}" wx:key="prototype" wx:for-index="index" wx:for-item="item" data-index="{{index}}" data-selected="{{selected}}" class="tab-bar-item" data-path="{{item.pagePath}}" data-pagestyle="{{pageStyle}}" bindtap="switchTab">
    <image class="image" src="{{selected == index ? '/images/'+pageStyle +item.selectedIconPath : '/images/' + pageStyle +item.iconPath}}"></image>
    <view class="text {{selected == index ? selectedColor : color}}">{{item.text}}</view>
  </view>
</view>
