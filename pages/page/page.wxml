<!--单页面合集-->

<view class="wrapper bgcolor-base"></view>

<navtitle id="c-bar" title="{{title}}" isshare="{{isshare}}" isActive="{{isActive}}" isGoback="{{isGoback}}" />

<view class="container bgcolor-base page">

  <view class="wrap"
    style="padding-bottom:calc(96rpx + env(safe-area-inset-bottom));padding-top: {{customBarHeight}}px;">
    <view class="pagelist">
      <view class="set-container" wx:if="{{posttype=='set'}}">
        <view class="cardbox">
          <view class="card bgcolor-sub user-items card-cell-wrap">
            <view class="card-cell">
              <view class="card-cell-msg">
                <view class="card-cell-base">
                  <view class="card-cell-title">官方设置</view>
                </view>
                <view class="card-cell-more">
                  <text class="text"></text>
                  <icon class="icon iconfont icon-arrow-right" />
                </view>
              </view>
              <button class="card-cell-btn button" open-type="openSetting" bindopensetting="callback">打开设置页</button>
            </view>
            <view class="card-cell">
              <view class="card-cell-msg">
                <view class="card-cell-base">
                  <view class="card-cell-title">清除缓存</view>
                </view>
                <view class="card-cell-more">
                  <text class="text">{{currentSize}}</text>
                  <icon class="icon iconfont icon-arrow-right" />
                </view>
              </view>
              <button class="card-cell-btn button" bindtap="clear" />
            </view>
            <view class="card-cell">
              <view class="card-cell-msg">
                <view class="card-cell-base">
                  <view class="card-cell-title">黑白风格</view>
                </view>
                <view class="card-cell-more">
                  <text class="text">跟随系统</text>
                  <!-- <icon class="icon iconfont icon-arrow-right" /> -->
                </view>
              </view>
            </view>
          </view>
        </view>
        <view class="cardbox">
          <view class="card bgcolor-sub user-items card-cell-wrap">
            <view class="card-cell">
              <view class="card-cell-msg">
                <view class="card-cell-base">
                  <view class="card-cell-title">给好评</view>
                </view>
                <view class="card-cell-more">
                  <text class="text">给小程序点个赞</text>
                  <icon class="icon iconfont icon-arrow-right" />
                </view>
              </view>
            </view>
          </view>
        </view>

      </view>
      <view class="about-container" wx:if="{{posttype=='about'}}">
        <view class="header">
          <view class="icon bgcolor-sub">
            <image class="image" src="" />
          </view>
          <view class="title"><text class="text">建始同城共享书小程序</text><text class="text">V3.0.0</text></view>
        </view>
        <view class="body">
          <view class="button bgcolor-sub">功能介绍</view>
          <view class="button bgcolor-sub">作者微信</view>
          <view class="button bgcolor-sub">Sketch下载</view>
        </view>
        <view class="foot"></view>
      </view>
    </view>
  </view>
</view>