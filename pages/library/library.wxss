.scoll-y {
  position: fixed;
  height: 100%;
}

.popuparea .popupareafoot {
  height:120rpx;
}
.catsselect {
  padding:30rpx 0;
}
.catsselect .tit {
  font-weight: 600;
  font-size: 34rpx;
  margin-top:30rpx;
  text-align: center;
}

.catsselect .cellbox {
  padding: 30rpx 40rpx;
}

.catsselect .cellbox .checkboxgroup {
  position:relative;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}

.catsselect .cellbox .checkboxgroup::after {
  content: '';
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  top: 0;
  box-sizing: border-box;
}

.catsselect .cellbox.grid3 .cell:nth-child(3n-2)::after,
.catsselect .cellbox.grid2 .cell:nth-child(2n-1)::after {
  border-left-width: 1rpx;
  border-right-width: 1rpx;
}

.catsselect .cellbox.grid3 .cell:nth-child(3n-1)::after,
.catsselect .cellbox.grid3 .cell:nth-child(3n)::after,
.catsselect .cellbox.grid2 .cell:nth-child(2n)::after {
  border-right-width: 1rpx;
}

.catsselect .cellbox.grid3 .cell:nth-child(1)::after,
.catsselect .cellbox.grid3 .cell:nth-child(2)::after,
.catsselect .cellbox.grid3 .cell:nth-child(3)::after,
.catsselect .cellbox.grid2 .cell:nth-child(1)::after,
.catsselect .cellbox.grid2 .cell:nth-child(2)::after
 {
  border-top-width: 1rpx;
}

.catsselect .cellbox .cell {
  position: relative;
  height: 100rpx;
  font-size: 26rpx;
}

.catsselect .cellbox.category .cell {
  height: 100rpx;
}


.catsselect .cellbox .cell::after {
  content: '';
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  top: 0;
  box-sizing: border-box;
  border-width: 0 0 1rpx 0;
  border-style: solid;
  border-color: rgba(123, 123, 123, .3);
}

.catsselect .cellbox .cell .cellhead {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: 10;
}

.catsselect .cellbox .cell .cellhead .checkbox {
  opacity: 0;
}

.catsselect .cellbox .cell .cellbody {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}

.catsselect .cellbox .cell.on {
  font-weight: 500;
}

